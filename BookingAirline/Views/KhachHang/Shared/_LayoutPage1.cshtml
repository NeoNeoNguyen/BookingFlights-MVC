<script>
    $(document).ready(function () {
        // Lưu trữ tất cả các option trong dropdown điểm đến (To)
        var allOptions = $('#to option').clone();

        // Xử lý sự kiện khi dropdown điểm đi (From) thay đổi
        $('#from').change(function () {
            var selectedOption = $(this).val(); // Lấy giá trị đã chọn trong dropdown điểm đi (From)

            // Khôi phục tất cả các option trong dropdown điểm đến (To)
            $('#to').empty().append(allOptions);

            // Loại bỏ option đã chọn từ dropdown điểm đến (To)
            $('#to option[value="' + selectedOption + '"]').remove();

            // Hiển thị lại nội dung đã ẩn trước đó (nếu có)
            $('#to').removeAttr('disabled');
        });

        // Xử lý sự kiện khi dropdown điểm đến (To) thay đổi
        $('#to').change(function () {
            var selectedOption = $(this).val(); // Lấy giá trị đã chọn trong dropdown điểm đến (To)

            // Nếu người dùng chọn lại "Select a location..."
            if (selectedOption === "") {
                // Hiển thị lại tất cả các option trong dropdown điểm đến (To)
                $('#to').empty().append(allOptions);
            }
        });
    });
</script>