<script type="text/javascript">

    $(document).ready(function () {

        // navigation click actions
        $('.scroll-link').on('click', function (event) {
            event.preventDefault();
            var sectionID = $(this).attr("data-id");
            scrollToID('#' + sectionID, 750);
        });
        // scroll to top action
        $('.scroll-top').on('click', function (event) {
            event.preventDefault();
            $('html, body').animate({ scrollTop: 0 }, 'slow');
        });
        // mobile nav toggle
        $('#nav-toggle').on('click', function (event) {
            event.preventDefault();
            $('#main-nav').toggleClass("open");
        });
    });
    // scroll function
    function scrollToID(id, speed) {
        var offSet = 0;
        var targetOffset = $(id).offset().top - offSet;
        var mainNav = $('#main-nav');
        $('html,body').animate({ scrollTop: targetOffset }, speed);
        if (mainNav.hasClass("open")) {
            mainNav.css("height", "1px").removeClass("in").addClass("collapse");
            mainNav.removeClass("open");
        }
    }
    if (typeof console === "undefined") {
        console = {
            log: function () { }
        };
    }

</script>
<script>
    function readURL(input, thumbimage) {
        if (input.files && input.files[0]) { //Sử dụng  cho Firefox - chrome
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#thumbimage").attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
        else { // Sử dụng cho IE
            $("#thumbimage").attr('src', input.value);

        }
        $("#thumbimage").show();
        $('.filename').text($("#uploadfile").val());
        $('.Choicefile').css('background', '#14142B');
        $('.Choicefile').css('cursor', 'default');
        $(".removeimg").show();
        $(".Choicefile").unbind('click');

    }
    $(document).ready(function () {
        $(".Choicefile").bind('click', function () {
            $("#uploadfile").click();

        });
        $(".removeimg").click(function () {
            $("#thumbimage").attr('src', '').hide();
            $("#myfileupload").html('<input type="file" id="uploadfile"  onchange="readURL(this);" />');
            $(".removeimg").hide();
            $(".Choicefile").bind('click', function () {
                $("#uploadfile").click();
            });
            $('.Choicefile').css('background', '#14142B');
            $('.Choicefile').css('cursor', 'pointer');
            $(".filename").text("");
        });
    })

</script>
<script>
    $(document).ready(function () {
        // Lưu trữ tất cả các option trong dropdown điểm đến (To)
        var allOptions = $('#to option').clone();
        
        // Xử lý sự kiện khi dropdown điểm đi (From) thay đổi
        $('#from').change(function () {
            var selectedOption = $(this).val(); // Lấy giá trị đã chọn trong dropdown điểm đi (From)
            // Khôi phục tất cả các option trong dropdown điểm đến (To)
            $('#to').empty().append(allOptions);

            // Loại bỏ option đã chọn từ dropdown điểm đến (To)
            $('#to option[value="' + selectedOption + '"]').remove();

            // Hiển thị lại nội dung đã ẩn trước đó (nếu có)
            $('#to').removeAttr('disabled');
        });

        // Xử lý sự kiện khi dropdown điểm đến (To) thay đổi
        $('#to').change(function () {
            var selectedOption = $(this).val(); // Lấy giá trị đã chọn trong dropdown điểm đến (To)

            // Nếu người dùng chọn lại "Select a location..."
            if (selectedOption === "") {
                // Hiển thị lại tất cả các option trong dropdown điểm đến (To)
                $('#to').empty().append(allOptions);
            }
        });
    });
</script>
