@model BookingAirline.Models.KhachHang

@using BookingAirline.Models;
@{
    ViewBag.Title = "ThongtinCaNhan";
    Layout = "~/Views/KhachHangHA/Shared/_LayoutInfoCustomer.cshtml";
    ViewBag.active2 = "active";
}
<style>
    img {
        border-radius: 50%;
